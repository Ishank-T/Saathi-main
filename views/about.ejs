<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saathi Club</title>
    <link rel="stylesheet" href="/project/css/style2.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <h1>Saathi Club</h1>

        <h3>Indian Institute of Technology Guwahati</h3>
      </div>
    </div>

    <div class="middle">
      <div class="nav-bar">
        <a class="links" aria-current="page" href="#item-1">About Us</a>

        <a class="links" href="#item-2">Activities</a>

        <a class="links" href="#item-3">Counsellors</a>

        <a class="links" href="#item-4">Members</a>

        <a class="links" href="#item-5">Contact</a>
      </div>
      
      <div class="content">
        <div class="about-us" id="item-1">
          <h1><%= about.title %></h1>
          <p><%= about.body %></p>
        </div>
        <div class="about-us" id="item-2">
          <h1>ACTIVITIES</h1>
          <% activity.forEach(x=>{ %>
          <div class="row my-3">
            <!-- <h2 class="logo">MANDATORY INTERACTION</h2> -->
            <div class="col-4">
              <img
                src=<%= x.ImagePath %>
                class="card-img-top shadow img"
                alt="..."
              />
            </div>

            <div class="col-6">
              <h5 class="card-title"><%= x.title %></h5>
              <p class="card-text">
                <%= x.body %>
              </p>
            </div>
          </div>
          <% }) %>
         
         

        </div>
      </div>
    </div>
  </body>
</html>
